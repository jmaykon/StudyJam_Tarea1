<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayck.studyjam_tarea1.MainActivity">

    <LinearLayout
    android:background="#187bde"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/linearLayout2"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Smart Connect"
      android:textStyle="bold"
      android:textSize="26dp"
      android:textColor="#FFF"/>
    <TextView
        android:layout_marginRight="2dp"
        android:layout_width="19dp"
        android:textColor="#FFF"
        android:textSize="26dp"
        android:layout_marginLeft="130dp"
        android:layout_height="wrap_content"
        android:text="+"/>

    <TextView
        android:textSize="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_marginLeft="10dp"
        android:textColor="#FFF"/>
</LinearLayout>
    <LinearLayout
        android:background="#187bde"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCESORIOS"
            android:textColor="#FFF"
            android:textSize="22dp"
            android:layout_marginLeft="26dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:hint="22dp"

            android:text="EVENTOS"
            android:textColor="#FFF"
            android:textSize="22dp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:text="Audifonos"
            android:textSize="26dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Cargador"
            android:textSize="26dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:text="Laptop"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Auricular"
            android:textSize="26dp"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="Memoria externa USB"
            android:textSize="26dp"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textColor="#ec0bd140"
            android:gravity="center"
            android:text="COMPRAR ACCESORIOS"
            android:textSize="22dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" />
    </RelativeLayout>

</RelativeLayout>
